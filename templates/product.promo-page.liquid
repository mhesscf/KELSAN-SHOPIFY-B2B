{% layout none %}
{% assign productObj =  all_products[product] %}
{% assign productFirstVar = product.first_available_variant %}
{% assign variations = 0 %}

{% assign crawlcheck = false %}
{% for c in all_products[product_handle].collections %}
    {% if c.handle == "discontinued" %}
        {% assign crawlcheck = true %}
    {% endif %}
{% endfor %}
{% if crawlcheck == true %}
    <tr style="display:none;" class="crawlcheck crawlcheck-related"><td><!-- check product that is supposed to be here for discontinued or broken handle ({{ product_handle }})--></td></tr>
{% endif %}


{% for variant in product.variants %}
    {% assign variations = variations | plus: 1 %}
{% endfor %}


<td class="promosku">
    <a href="/products/{{ product.handle }}">{{ productFirstVar.sku }}</a>
</td>
<td class="promoprod-image" >
    <a href="/products/{{ product.handle }}">{{ product.featured_image | img_url: '40x40' | img_tag: product.featured_image.alt }}</a>
</td>

<td class="parts-title" data-prod-title ><a href="/products/{{ product.handle }}">{{ product.title }}</a></td>

<td class="promoprod-price">

        <a href="/products/{{ product.handle }}"><span class="single-price">{{ productFirstVar.price | money }}</span></a>

</td>
<td class="link-icon" ><a href="/products/{{ product.handle }}"><i class="fa-solid fa-arrow-right-to-bracket"></i></a></td>
{% comment %}<td class="promoprod-atc">{% endcomment %}
{% comment %}<a href="/products/{{ product.handle }}"><button class="button-secondary">View Details</button></a>{% endcomment %}
{% comment %}</td>{% endcomment %}



