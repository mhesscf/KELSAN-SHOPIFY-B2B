{% style %}
 .basic-link-grid .container{
	 width: 1340px;
	 max-width: 90%;
	 margin: auto;
	 padding: 0 0 40px 0;
 }
 .basic-link-grid .link-row{
	 display: flex;
	 flex-direction: row;
	 flex-wrap: wrap;
	 width: 100%;
	 justify-content: space-between;
 }
 .basic-link-grid .flex-row .column{
     width: 31%
 }
 .basic-link-grid .flex-row .link-wrap a{
	 color: {{ settings.color_icons }};
     text-decoration: none;
     display: block;
     font-size: 17px;
    transition: all 0.4s ease-in-out;
 }
 .basic-link-grid .flex-row .link-wrap a svg{
     margin-left: 5px;
    font-size: 13px;
    position: relative;
 }

 .basic-link-grid .flex-row .link-wrap{
	 margin: 10px 0;
     padding-right: 10px;
 }
 .basic-link-grid h2{
	 color: {{ settings.color_headings }};
     font-size: 30px;
     font-weight: 600;
 }
 @media (max-width: 1200px){
	 .basic-link-grid .flex-row .link-wrap a{
         font-size: 16px;
     }
 }
 @media (max-width: 991.98px){
	 .basic-link-grid .flex-row .column{
		 width: 48%
	 }
	 .basic-link-grid .container{
         padding: 20px 0;
     }
 }
 {% endstyle %}
<section class="basic-link-grid">
    <div class="container">
        {% if section.settings.sectionheading != blank %}
            <div class="row">
                <h2>{{ section.settings.sectionheading }}</h2>
            </div>
        {% endif %}
        <div class="row flex-row link-row">
            {% for block in section.blocks %}
                {% case block.type %}
                    {% when 'link' %}
                        <div class="link-wrap column">
                            <a href="{{ block.settings.linkurl }}">{{ block.settings.linktext }} <i class="fa-solid fa-arrow-right"></i></a>
                        </div>
                {% endcase %}
            {% endfor %}
        </div>
    </div>
</section>
{% schema %}
{
    "name": "basic-link-grid",
    "class": "basic-link-grid--section",
    "settings":[
        {
            "type": "text",
            "label": "Section Heading",
            "id" : "sectionheading"
        }
    ],
    "blocks": [
        {
            "name": "Link",
            "type": "link",
            "settings": [
                {
                    "type": "text",
                    "id": "linktext",
                    "label": "Link Text"
                },
                {
                    "type" : "url",
                    "id": "linkurl",
                    "label": "Link URL"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "basic-link-grid-section",
            "name": "Basic Link Grid",
            "settings": {
            }
        }
    ]
}
{% endschema %}