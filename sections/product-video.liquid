{% if product.metafields.plytix.product_video != blank %}
    <section class="product-video">
        <div class="section-heading">
            <h2>Videos</h2>
        </div>
    {% assign pvideo = product.metafields.plytix.product_video | split: ";" %}
    {% for vid in pvideo %}
        {% assign pyt = vid | split: "::" %}
                <div class="container">
                    <div class="video-wrap">
                        <iframe src="https://www.youtube.com/embed/{{ pyt[0] }}?loop=1&modestbranding=1" frameborder="0"></iframe>
                    </div>
                    {% if pyt[1] != "None" %}
                    <div class="info-wrap">
                        {{ pyt[1] }}
                    </div>
                    {% endif %}
                </div>
    {% endfor %}
    </section>
{% endif %}
{% schema %}
{
    "name": "product-video",
    "class": "product-video--section",
    "presets": [
        {
            "category": "product-video-section",
            "name": "Product Video",
            "settings": {
            }
        }
    ]
}
{% endschema %}
