{% comment %}Made by Cleanfreak{% endcomment %}
{% if section.settings.show_section %}
  {% include 'related-tabs-logic' %}
{% endif %}
{% schema %}
{
    "name": "Related Products Tabs",
    "class": "related_product_tabs",
    "settings": [
    {
    "type": "header",
    "content": "Tabs for the Related Products Area"
    },
    {
        "type": "checkbox",
        "id": "show_section",
        "label": "Show section",
        "default": true
    },
    {
    "type": "checkbox",
    "id": "debugme",
    "label": "Enable Debugging (CF dev only)",
    "default": false
    }
    ],
    "presets": [
    {
        "name": "Related Products Tabs",
        "category": "Layout",
        "settings": {

        }
    }
    ],
    "blocks": [
        {
        "name": "Tab Information",
        "type": "tabinfo",
        "settings": [
            {
            "type": "text",
            "id": "tab_name",
            "default": "Related Products",
            "label": "Tab Name"
            },
            {
            "type": "text",
            "id": "tab_name_sm",
            "default": "Related",
            "label": "Mobile Tab Name"
            },
            {
            "type": "text",
            "id": "tab_rel_id",
            "default": "AttributeName",
            "label": "Relationship Attribute Id"
            }
        ]
        }
    ]
    }
{% endschema %}
