<section class="product-single-spec-manual">
    <div class="container">
        <div class="row {% if product.metafields.plytix.sds_file != blank or product.metafields.plytix.manual != blank or product.metafields.plytix.literature != blank %}space-between {% else %}centered-content{% endif %}">
            <div class="l">
                <h2>Product Information + Specs</h2>
                <div class="spec-table">
                    <div class="inner">
                        {% assign specs = product.metafields.plytix.specs | split: ";;" %}
                        {% for spec in specs %}
                            {% assign attr = spec | split: "::" %}
                            {% if attr[1] != "None" %}
                                <div class="row">
                                    <div class="label">{{ attr[0] }}</div>
                                    {% assign attrVal = attr[1] | remove: "[" | remove: "]" |  remove : "'" %}
                                    {% if attrVal == 'false' or attrVal == 'False' %}
                                        <div class="value">No</div>
                                    {% else %}
                                        <div class="value">{{ attr[1] | remove: "[" | remove: "]" |  remove : "'" | replace: ';', ', ' | newline_to_br }}</div>
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% if product.metafields.plytix.sds_file != blank or product.metafields.plytix.manual != blank or product.metafields.plytix.literature != blank %}
                {% assign pdf_names = product.metafields.plytix.pdf_file_names | split: ","  %}
                {% assign pdf_titles = product.metafields.plytix.pdf_file_titles | split: ","  %}
                <div class="r">
                    <h2>Safety, Warranty + User Manuals</h2>
                    <div class="data-sheets">
                        {% if product.metafields.plytix.sds_file != blank  %}
                            <div class="sheet-row">
                                <div class="sheet-label"><strong>Product Safety Data Sheet</strong></div>
                            </div>
                            {%- assign sdsheets = product.metafields.plytix.sds_file | split:"," -%}
                            {%- for sdsheet in sdsheets -%}
                                {%- assign basefilename = sdsheet | split: '/' | last -%}
                                {%- assign filetitle = basefilename -%}
                                {%- assign indexofname = 0 -%}
                                {%- assign pdftitlecheck = 0 -%}
                                {%- for file_name in pdf_names -%}
                                    {% if basefilename == file_name  %}
                                        {% if pdf_titles[indexofname]  %}
                                            {%- assign filetitle = pdf_titles[indexofname] -%}
                                        {%- endif -%}
                                    {%- endif -%}
                                    {%- assign indexofname = indexofname | plus: 1 -%}
                                {%- endfor -%}
                                <div class="sheet-row sheet-name {% if pdftitlecheck == 0 %}orgfile{% endif %}">
                                    {% if shop.name contains "AirMovers" %}
                                        <a taget="_blank" href="{{ basefilename | file_url }}"><i class="fa-solid fa-file-pdf"></i> {{ filetitle }}</a>
                                    {% else %}
                                        <a taget="_blank" href="{{ sdsheet }}"><i class="fa-solid fa-file-pdf"></i> {{ filetitle }}</a>
                                    {% endif %}
                                </div>
                            {%- endfor -%}
                        {%- endif -%}
                        {% if product.metafields.plytix.manual != blank  %}
                            <div class="sheet-row">
                                <div class="sheet-label"><strong>Product Manual</strong></div>
                            </div>
                            {%- assign manuals = product.metafields.plytix.manual | split:"," -%}
                            {%- for manual in manuals -%}
                                {%- assign basefilename = manual | split: '/' | last -%}
                                {%- assign filetitle = basefilename -%}
                                {%- assign indexofname = 0 -%}
                                {%- assign pdftitlecheck = 0 -%}
                                {%- for file_name in pdf_names -%}
                                    {% if basefilename == file_name  %}
                                        {% if pdf_titles[indexofname]  %}
                                            {%- assign filetitle = pdf_titles[indexofname] -%}
                                        {%- endif -%}
                                    {%- endif -%}
                                    {%- assign indexofname = indexofname | plus: 1 -%}
                                {%- endfor -%}

                                <div class="sheet-row sheet-name {% if pdftitlecheck == 0 %}orgfile{% endif %}">
                                    {% if shop.name contains "AirMovers" %}
                                        <a taget="_blank" href="{{ basefilename | file_url }}"><i class="fa-solid fa-file-pdf"></i> {{ filetitle }}</a>
                                    {% else %}
                                        <a taget="_blank" href="{{ manual }}"><i class="fa-solid fa-file-pdf"></i> {{ filetitle }}</a>
                                    {% endif %}
                                </div>
                            {%- endfor -%}
                        {%- endif -%}
                        {% if product.metafields.plytix.literature != blank  %}
                            <div class="sheet-row">
                                <div class="sheet-label"><strong>Product Literature</strong></div>
                            </div>
                            {%- assign literature = product.metafields.plytix.literature | split:"," -%}
                            {%- for lit in literature -%}
                                {%- assign basefilename = lit | split: '/' | last -%}
                                {%- assign filetitle = basefilename -%}
                                {%- assign indexofname = 0 -%}
                                {%- assign pdftitlecheck = 0 -%}
                                {%- for file_name in pdf_names -%}
                                    {% if basefilename == file_name  %}
                                        {% if pdf_titles[indexofname]  %}
                                            {%- assign filetitle = pdf_titles[indexofname] -%}
                                            {%- assign pdftitlecheck = 1 -%}
                                        {%- endif -%}
                                    {%- endif -%}
                                    {%- assign indexofname = indexofname | plus: 1 -%}
                                {%- endfor -%}
                                <div class="sheet-row sheet-name {%- if pdftitlecheck == 0 -%}orgfile{% endif %}">
                                    {% if shop.name contains "AirMovers" %}
                                        <a taget="_blank" href="{{ basefilename | file_url }}"><i class="fa-solid fa-file-pdf"></i> {{ filetitle }}</a>
                                    {% else %}
                                        <a taget="_blank" href="{{ lit }}"><i class="fa-solid fa-file-pdf"></i> {{ filetitle }}</a>
                                    {% endif %}
                                </div>
                            {%- endfor -%}
                        {%- endif -%}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</section>
{% schema %}
{
    "name": "product-specs-info",
    "class": "product-specs-info--section",
    "presets": [
        {
            "category": "product-specs-info-section",
            "name": "Product Specs and Info",
            "settings": {
            }
        }
    ]
}
{% endschema %}