{% style %}
	.f-cat-slider__content{
		--layout-container-max-width: {{ max_width | append: 'px' }};
		--layout-container-gutter: 10px;
		max-width: 1400px;
		padding-right: 10px;
		padding-left: 10px;
		margin-right: auto;
		margin-left: auto;
        overflow: hidden;
	}

	.f-cat-slider__content .featured-slider-title{
		color: {{ settings.color_headings }};
		font-family: Roboto;
		font-size: 30px;
		font-weight: 500;
		letter-spacing: 0;
		line-height: 32px;
		margin-bottom: 15px;
	}

	.f-cat-slider__content .category-link{
		color: #5B6770;
		font-family: Roboto;
		font-size: 18px;
		font-weight: 500;
		letter-spacing: 0;
		line-height: 25px;
		text-decoration: none;
		padding-left: 30px;
	}

	.f-cat-slider__content .category-link svg{
		width: 22px;
	}

	.category-featured-slider .product-slide{
		border-radius: 29px;
		background-color: #FFFFFF;
		box-shadow: 0 2px 10px 0 rgba(0,0,0,0.14);
		padding: 20px;
		margin-right: 20px;
		width: 531px;
		height: inherit !important;
		position: relative;
		overflow: hidden;
	}
	.category-featured-slider .slick-track{
		display: flex !important;
	}
	.category-featured-slider .product-slide a{
		text-decoration: none;
	}
	.category-featured-slider .product-slide .inner{
		display: flex;
		flex-flow: row;
		justify-content: space-between;
		height: 100%;
	}
	.category-featured-slider .product-slide .inner .col{
		display: flex;
		flex-flow: column;
	}
	.category-featured-slider .product-slide .inner .col.img-col{
		width: 43%;
    }
	.category-featured-slider .product-slide .inner .col.txt-col{
		width: 53%;
		display: flex;
		height: inherit;
		z-index: 2;
	}
	.category-featured-slider .product-slide .inner .col.txt-col .content-wrap{
		height: 100%;
		padding-bottom: 50px;
		position: relative;
	}
	.category-featured-slider .product-slide .inner .col.txt-col .content-wrap .jdgm-prev-badge__text{
		color: {{ settings.color_text }};
	}
	.category-featured-slider .product-slide .inner::after{
		position: absolute;
		content: "";
		left: 0;
		right: 0;
		bottom: 0;
		top: 0;
		z-index: 1;
	}
	.category-featured-slider .product-slide .inner .col.txt-col .content-wrap button{
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		z-index: 3;
	}

	.category-featured-slider .product-slide img{
		margin: auto;
        width: 100%;
        max-width: 100%;
	}
	.category-featured-slider .product-slide .product-title{
		color: {{ settings.color_headings }};
		font-family: Roboto;
		font-size: 20px;
		font-weight: 500;
		letter-spacing: 0;
		line-height: 22px;
        margin-top: 0;
		text-decoration: none;
	}
	.category-featured-slider .product-slide .ship-made p{
		color: {{ settings.color_text }};
		margin: 8px 0 0 0;
	}

	.category-featured-slider .product-slide a{
		text-decoration: unset;
	}
	.category-featured-slider .product-slide .product-note{
		color: #5B6770;
		font-family: Roboto;
		font-size: 15px;
		letter-spacing: 0;
		line-height: 22px;
		margin: 10px 0;
	}
	.category-featured-slider .product-slide .product__price sup{
		color: {{ settings.color_headings }};
		font-family: Roboto;
		font-size: 16px;
		font-weight: 500;
		letter-spacing: 0;
		line-height: 22px;
	}
	.category-featured-slider .product-slide .product__price div{
        font-weight: 800;
    }
	.category-featured-slider .product-slide .product__price{
		color: #303E48;
		font-family: Roboto;
		font-size: 26px;
		font-weight: 300;
		letter-spacing: 0;
		line-height: 28px;
		display: flex;
		justify-content: flex-start;
		margin-bottom: 8px;
	}
	.category-featured-slider .product-slide .price-compare-at{
		color: #303E48;
		font-family: Roboto;
		font-size: 15px;
		font-weight: 300;
		letter-spacing: 0;
		line-height: 22px;
		text-decoration: line-through;
        margin-left: 10px;
        position: relative;
        top: 8px;
	}

	.category-featured-slider .product-slide .price-was{
		font-size: 13px;
		position: relative;
		margin-bottom: 8px;
		color: {{ settings.color_button_secondary_background }};
	}

	.category-featured-slider .product-slide .add-to-cart-btn{
		font-size: 15px;
		letter-spacing: 3px;
		display: block;
		color: #fff;
		text-align: center;
		padding: 11px 0;
		border-radius: 13px;
		text-decoration: none;
		width: 100%;
		margin: 10px 0 0 0;
		font-family: "Roboto", Roboto;
		background-color: {{ settings.color_button_secondary_background  }};
		color: {{ settings.color_button_text }};
		border: 0;
		cursor: pointer;
		transition: all 0.4s ease-in-out;
		font-weight: 500;
	}
	.category-featured-slider .product-slide .add-to-cart-btn:hover{
	background-color: {{ settings.color_button_hover }}
	}
	.category-featured-slider .product-slide .add-to-cart-btn.view-product{
		color: {{ settings.color_button_text }};
		background-color: {{ settings.color_button_background }};
		border: 1px solid {{ settings.color_button_background }};
	}

	.category-featured-slider .product-slide .add-to-cart-btn.view-product:hover{
		background: {{ settings.color_background | color_mix: settings.color_button_background, 10 }};
		border: 1px solid {{ settings.color_background | color_mix: settings.color_button_background, 10 }};
	}



	.f-cat-slider__content ul.slick-dots {
		float: left;
		padding-left: 0;
		margin-top: 30px;
	}

	.f-cat-slider__content .slick-dots li {
		float: left;
		list-style: none;
		border-radius: 2.4px;
		background-color: #C0D3D8;
		/* padding-left: 0; */
		height: 6px;
		width: 60px;
		margin-right: 10px;
	}

	.f-cat-slider__content .slick-dots li button {
		display: none;
	}

	.f-cat-slider__content .slick-dots .slick-active {
		background-color: #5B6770;
	}
	.f-cat-wrapper .category-featured-slider{
        width: 100%;
        max-width: 1400px;
    }
	.f-cat-wrapper .category-featured-slider .slick-list{
        overflow: visible;
    }
    .f-cat-wrapper .slide-arrows{
        display: flex;
		justify-content: end;
        margin-top: 20px;
    }
	.f-cat-wrapper .slide-arrows .slide-arrow{
        width: 45px;
        height: 45px;
        text-align: center;
        display: block;
        background-color: {{ settings.color_slide_arrow_background }};
        color: #fff;
        border: 0;
		line-height: 45px;
		font-size: 22px;
        border-radius: 50%;
        cursor: pointer;
    }
	.f-cat-wrapper .slide-arrows .slide-arrow:hover{
		background-color: {{ settings.color_slide_arrow_background | color_darken: 10 }};
	}
	.f-cat-wrapper .slide-arrows .slide-arrow.prev-arrow{
        margin-right: 10px;
    }
	@media (max-width: 640px){
		.category-featured-slider .product-slide{
            max-width: 250px;
        }
		.category-featured-slider .product-slide .inner{
            display: block;
        }
		.category-featured-slider .product-slide .inner .col{
            display: block;
        }
		.category-featured-slider .product-slide .inner .col.img-col{
			width: 100%;
		}
		.category-featured-slider .product-slide .inner .col.txt-col{
			width: 100%;
			height: auto;
		}
		.category-featured-slider .product-slide h4{
            font-size: 18px;
            line-height: 22px;
        }
	}
{% endstyle %}
<section class="f-cat-wrapper">
    <div class="f-cat-slider__content">
        <h3 class="featured-slider-title">{{ section.settings.cfpssectionheading }}</h3>
        <div class="category-featured-slider">
            {% for block in section.blocks %}
                {% case block.type %}
                    {% when 'slide' %}
                        <div class="product-slide">
                            <a href="{{ block.settings.product.url }}" class="inner">
                                <div class="col img-col">
                                    <img src="{{ block.settings.product.featured_image | img_url: '300x300' }}" alt="{{ block.settings.product.featured_image.alt }}">
                                </div>
                                <div class="col txt-col">
                                    <div class="content-wrap" >
                                        <div class="product-title">{{ block.settings.product.title }}</div>
										{% assign current_variant = block.settings.product.selected_or_first_available_variant %}
										{% if current_variant.sku != blank %}
											<div class="product-detail-sku">
												SKU:<span>{{ current_variant.sku }}</span>
											</div>
										{% endif %}
										<div class="product__price">
											{% if block.settings.product.metafields.plytix.package_products != blank %}
												{%- assign bproducts = block.settings.product.metafields.plytix.package_products | split: "," %}
												{% assign bundle_price = 0 %}
												{% for bproduct in bproducts %}
													{% assign attr = bproduct | split: "#" %}
													{%- assign bundlep = attr[0] | strip %}
													{% assign bundle_price = all_products[bundlep].price | times: attr[1] | plus: bundle_price %}
												{% endfor %}
												<span class="money bundle-price" data-bundle-price>
													<div class="price-current"><sup>$</sup>{{ bundle_price | money_without_currency }}</div>
												</span>
											{% else %}
												<div class="price-current"><sup>$</sup>{{ block.settings.product.price | money_without_currency }}</div>
											{% endif %}
											<div class="price-compare-at">{{ block.settings.product.plytix.list_price | money }}</div>
										</div>
                                        {% if block.settings.product.compare_at_price != blank %}
                                            <div class="price-was">( Was <sup>$</sup>{{ block.settings.product.compare_at_price | money_without_currency }})</div>
                                        {% endif %}
										{% comment %}Start automatically added Judge.me widget{% endcomment %}
										{% render 'judgeme_widgets', widget_type: 'judgeme_preview_badge', concierge_install: true, product: block.settings.product %}
										{% comment %}End automatically added Judge.me widget{% endcomment %}
										{% if block.settings.product.metafields.plytix.free_shipping %}
											<div class="ship-made">
												<p>Free Shipping</p>
											</div>
										{% endif %}

										{% assign has_variants = false %}
										{% unless block.settings.product.has_only_default_variant %}
											{% assign has_variants = true %}
										{% endunless %}

										{% assign pstep = 1 %}
										{% if product.metafields.plytix.product_step != blank %}
											{% assign pstep = product.metafields.plytix.product_step %}
										{% endif %}
										{% for variant in product.variants %}
											{% if variant.metafields.plytix.product_step %}
												{% assign pstep = variant.metafields.plytix.product_step %}
											{% endif %}
										{% endfor %}

										{%- if block.settings.product.available != true -%}
											<form method="post" action="/cart/add" class="cart-form">
												<input type="hidden" class="pid" value="{{block.settings.product.id}}">
												<input type="hidden" class="ptitle" value="{{block.settings.product.title | remove: "'" | remove: '"'}}">
												<input type="hidden" class="pprice" value="{{block.settings.product.variants.first.price | times: 0.01}}">
												<input type="hidden" class="pbrand" value="{{block.settings.product.vendor | remove: "'" | remove: '"'}}">
												<input type="hidden" class="ptype" value="{{block.settings.product.type | remove: "'" | remove: '"'}}">
												<input type="hidden" class="pcategory_id" value="{{ block.settings.product.collections.first.id }}">
												<input type="hidden" class="pcategory_name" value="{{ block.settings.product.collections.first.title | remove: "'" | remove: '"' }}">
												<input type="hidden" class="pvtitle" value="{{ block.settings.product.variants.first.title | remove: "'" | remove: '"' }}">
												<input type="hidden" class="psku" value="{{ block.settings.product.variants.first.sku }}">
												<input type="hidden" name="id" value="{{ block.settings.product.variants.first.id }}" />
												<input min="1" type="hidden" id="quantity" name="quantity" value="1"/>
												<input disabled class="disabled add-to-cart-btn" type="submit" value="SOLD OUT" class="btn" />
											</form>
										{%- else -%}
											{% if block.settings.product.metafields.plytix.package_products != blank or pstep > 1 or product.price <= 0 or has_variants%}
												{%- comment -%}
												<form method="post" action="/cart/add" class="cart-form">
													{%- assign bundle_products = block.settings.product.metafields.plytix.package_products | split: "," %}
													{%- assign free_products = block.settings.product.metafields.plytix.packaged_free_product | split: "," %}
													<div data-bundle-subproducts>
														{% for bundle_product_entry in bundle_products %}
															{% assign bundle_product_entry_parts = bundle_product_entry | split: "#" %}
															{%- assign bundle_product_handle = bundle_product_entry_parts[0] | strip %}
															{%- assign bundle_product = all_products[bundle_product_handle] %}
															<input type="hidden"
																   name="updates[{{ bundle_product_handle }}]"
																   class="quantity field"
																   data-bundle-subproduct
																   data-id="{{ bundle_product.selected_or_first_available_variant.id }}"
																   data-erpSku="{{ bundle_product.metafields.plytix.erp_sku }}"
																   data-tieredPricing=""
																   data-qty="{{ bundle_product_entry_parts[1] }}"
																   data-price="{{ bundle_product.price }}"
																   value="{{ bundle_product_entry_parts[1] }}" />
														{% endfor %}
														{% for free_product_entry in free_products %}
															{% assign free_product_entry_parts = free_product_entry | split: "#" %}
															{%- assign free_product_handle = free_product_entry_parts[0] | strip %}
															{%- assign free_product = all_products[free_product_handle] %}
															<input type="hidden"
																   name="updates[{{ free_product_handle }}]"
																   class="quantity field"
																   data-bundle-subproduct-free
																   data-id="{{ free_product.selected_or_first_available_variant.id }}"
																   data-erpSku="{{ free_product.metafields.plytix.erp_sku }}"
																   data-tieredPricing="fg"
																   data-qty="{{ free_product_entry_parts[1] }}"
																   data-price="{{ free_product.price }}"
																   value="{{ free_product_entry_parts[1] }}" />
														{% endfor %}
													</div>

													<button class="add-to-cart-btn" type="submit" data-bundle-product-atc data-bundle="{{ block.settings.product.title }}">
														View Product
													</button>

												</form>{%- endcomment -%}
												<button class="add-to-cart-btn view-product" >
													VIEW PRODUCT
												</button>
											{% else %}
												<form method="post" action="/cart/add" class="cart-form">
													<input type="hidden" class="pid" value="{{block.settings.product.id}}">
													<input type="hidden" class="ptitle" value="{{block.settings.product.title | remove: "'" | remove: '"'}}">
													<input type="hidden" class="pprice" value="{{block.settings.product.variants.first.price | times: 0.01}}">
													<input type="hidden" class="pbrand" value="{{block.settings.product.vendor | remove: "'" | remove: '"'}}">
													<input type="hidden" class="ptype" value="{{block.settings.product.type | remove: "'" | remove: '"'}}">
													<input type="hidden" class="pcategory_id" value="{{ block.settings.product.collections.first.id }}">
													<input type="hidden" class="pcategory_name" value="{{ block.settings.product.collections.first.title | remove: "'" | remove: '"' }}">
													<input type="hidden" class="pvtitle" value="{{ block.settings.product.variants.first.title | remove: "'" | remove: '"' }}">
													<input type="hidden" class="psku" value="{{ block.settings.product.variants.first.sku }}">
													<input type="hidden" name="id" value="{{ block.settings.product.variants.first.id }}" />
													<input type="hidden" name="properties[_erp_sku]" value="{{ block.settings.product.variants.first.metafields.plytix.erp_sku }}" />
													<input type="hidden" name="properties[Sku]" value="{{ block.settings.product.variants.first.sku }}" />
													<input type="hidden" name="properties[_tiered_pricing]" value="{{ block.settings.product.variants.first.metafields.plytix.tiered_pricing }}" />
													<input min="1" type="hidden" id="quantity" name="quantity" value="1"/>
													<button class="add-to-cart-btn" type="submit" >
														ADD TO CART
													</button>
												</form>
											{% endif %}
										{%- endif -%}

                                    </div>
                                </div>
                            </a>
                        </div>
                {% endcase %}
            {% endfor %}
        </div>
        <div class="slide-arrows"></div>
    </div>
</section>
{% schema %}
{
    "name": "category-featured-slider",
    "class": "category-featured-slider--section",
    "settings":[
        {
            "type": "text",
            "label": "Section Heading",
            "id" : "cfpssectionheading"
        }
    ],
    "blocks": [
        {
            "name": "Slide",
            "type": "slide",
            "settings": [
                {
                    "type": "product",
                    "id": "product",
                    "label": "product"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "category-featured-slider",
            "name": "Category Featured Slider",
            "settings": {}
        }
    ]
}
{% endschema %}