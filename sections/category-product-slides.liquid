{% style %}
    .category-slider-wrapper{
        overflow: hidden;
        margin-bottom: 50px;
        margin-top: 50px;
        clear: both;
    }
    .category-slider-wrapper .container{
        width: 1400px;
        margin: auto;
        max-width: 90%;
        position: relative;
    }
    .category-slider-wrapper .featured-slider-title{
        text-align: left;
        margin-bottom: 0;
        font-weight: 600;
    }
    .category-slider-wrapper .category-link{
        color: {{ settings.warning_text }};
        text-decoration: none;
        margin: 13px auto 10px auto;
        display: block;
        font-weight: 600;
        font-size: 17px;
    }
    .category-slider-wrapper .slick-slider{
        padding-bottom: 50px;
    }
    .category-slider-wrapper .slides{
        padding: 0 0 50px 0;
        display:flex;
        overflow:hidden;
    }
    .category-slider-wrapper .slides .price-was{
        font-size: 13px;
        position: relative;
        top: -5px;
        color: {{ settings.color_button_secondary_background }};
    }
    .category-slider-wrapper .slides .price-was sup{
        top: -2px;
    }
    .category-slider-wrapper .slides .slick-list {
        padding: 0 10px;
        width: calc(100% + 10px);
        position: relative;
        left: 10px;
    }
    .category-slider-wrapper .slides .slick-list .slick-track{
        padding: 20px 0 15px 0;
        display: flex;
    }
    .category-slider-wrapper .slides .product-detail-sku{
        font-size: 13px;
        color: {{ settings.color_headings }};
        display: block;
    }
    .category-slider-wrapper .slides .product-slide{

        border-radius: 29px;
        padding: 20px;
        box-shadow: 0px 2px 10px 0px rgba(00,00,00,0.14);
        overflow: hidden;
        margin-right: 35px;

        height: inherit;
        transition: all 0.4s ease-in-out;
        position: relative;
    }
    .category-slider-wrapper .slides .product-slide.slick-active:last-of-type{
        margin-right: 0;
    }
    .category-slider-wrapper .slides .productgrid--item{
        margin-right: 35px;
        height: inherit;
        transition: all 0.4s ease-in-out;
        position: relative;
    }
    .category-slider-wrapper .slides .productgrid--item .productitem{
        width: 250px;
        min-width: 250px;
        padding: 20px;
        display: flex;
        height: 100%;
    }
    .category-slider-wrapper .slides .productgrid--item .jdgm-widget.jdgm-widget {
    display: block !important;
    }
    .category-slider-wrapper .slides .productgrid--item .jdgm-prev-badge {
        display: block !important;
    }
    .category-slider-wrapper .slides .product-slide .cart-form{
        display: flex;
        align-self: flex-end;
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
    }
    .category-slider-wrapper .slides .product-slide:hover{
        box-shadow: 0px 2px 25px 0px rgba(00,00,00,0.24);
    }
    .category-slider-wrapper .slides .product-slide .product__img{
        max-width: 100%;
        display: block;
    }
    .category-slider-wrapper .slides .product-slide .image-wrap{
        display: block;
        position: relative;
    }
    .category-slider-wrapper .slides .product-slide .image-wrap .poster{
        position: relative;
        display: block;
        padding-top: 100%;
        background-size: contain;
        background-position: center center;
        background-repeat: no-repeat;
    }
    .category-slider-wrapper .slides .product-slide .product__title{
        font-size: 18px;
        font-weight: 500;
        color: {{ settings.color_text }};
        text-decoration: none;
        margin-bottom: 5px;
        min-height: 50px;
    }

    .category-slider-wrapper .slides .productgrid--item .productitem__compare-wrapper{
        display: none;
    }

    .category-slider-wrapper .slides .product-slide .product__price{
        display: flex;
        align-content: center;
        margin-bottom: 10px;
    }
    .category-slider-wrapper .slides .product-slide .product__price .price-current{
        font-size: 26px;
        font-weight: 800;
        color: {{ settings.color_text }};
        text-decoration: none;
    }
    .category-slider-wrapper .slides .product-slide .product__price .price-compare-at{
        color: {{ settings.color_text_medium }};
        font-size: 15px;
        text-decoration: line-through;
        line-height: 1;
        align-self: center;
        margin-left: 10px;
    }
    .category-slider-wrapper .slides .product-slide .product__price .price-current sup{
        top: -8px;
        font-size: 16px;
        font-weight: 400;
    }

    .cat-slide-arrows{
        position: relative;
        display: flex;
        align-content: center;
        justify-content: flex-end;
    }
    .cat-slide-arrows .slide-arrow{
        width: 41px;
        height: 41px;
        border: 2px solid {{ settings.color_slide_arrow_background }};
        background-color: {{ settings.color_slide_arrow_background }};
        color: #fff;
        border-radius: 50%;
        font-size: 23px;
        cursor: pointer;
        transition: all 0.4s ease-in-out;
    }
    .cat-slide-arrows .slide-arrow svg{
        top: 1px;
        position: relative;
    }
    .cat-slide-arrows .slide-arrow:hover{
        border: 2px solid {{ settings.color_text }};
        background-color: #fff;
        color: {{ settings.color_icons }};
    }
    .cat-slide-arrows .slide-arrow.prev-arrow{
        margin-right: 20px;
    }
    .choose-opt-button{
        font-size: 15px;
        letter-spacing: 3px;
        display: block;
        color: #fff;
        text-align: center;
        padding: 11px 0;
        border-radius: 13px;
        text-decoration: none;
        width: 100%;
        margin: 10px 0 0 0;
        font-family: "Roboto", Roboto;
        background-color: {{ settings.color_button_secondary_background  }};
        color: {{ settings.color_button_text }};
        border: 0;
        cursor: pointer;
        transition: all 0.4s ease-in-out;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    .category-slider-wrapper .slides .product-slide .add-to-cart-btn.disabled{
        background-color: #757575;
    }
    .choose-opt-button:hover{
        background-color: {{ settings.color_button_hover }};
        color: {{ settings.color_button_text }};
        border: 0;
    }
    .category-slider-wrapper .slides .product-slide .ship-made p{
        font-size: 15px;
        line-height: 22px;
        margin: 0;
        color: {{ settings.color_text_medium  }};
    }
    .category-slider-wrapper .slide-arrow svg{
        position: relative;
        top: 2px;
    }
    .category-slider-wrapper .slide-arrow.prev-arrow{
        position: absolute;
        bottom: 0;
        right: 50px;
        margin-right: 10px;
    }
    .category-slider-wrapper .slide-arrow.next-arrow{
        position: absolute;
        bottom: 0;
        right: 0;
    }
    @media (max-width: 650px){
        .category-slider-wrapper .slides {
            width: 100%;
        }
        .category-slider-wrapper h2{
            font-size: 28px;
        }
        .category-slider-wrapper  .productitem--title a{
            font-size: 18px;
        }
    }

    .category-slider-wrapper .slides .productgrid--item{
        display:inline-block;
        width:240px;
    }
    .category-slider-wrapper .slides:not(.slick-slider) .productgrid--item{
        margin-top:20px;
    }
    .category-slider-wrapper .isspecial{
        border:3px solid #fdb913;
        border-radius: 30px;
        margin-left:4px;
    }
    .category-slider-wrapper .deal-rib{
        position:absolute;
        top:-28px;
        left: -28px;
        width:100px;
        z-index:100;
    }
{% endstyle %}
{%- capture section_type -%}
    static-collection-slider
{%- endcapture -%}


<script
        type="application/json"
        data-section-type="{{ section_type | strip }}"
        data-section-id="{{ section.id }}"
        data-section-data
>

</script>
<section class="category-slider-wrapper" data-section-id="{{ section.id }}">
    <div class="category-slider-wrapper__content container round-arrows">
        <div class="section-title-row">
            <h2 class="featured-slider-title"><span style="font-size:45px">Do Not use, use category featured slider instead</span> {{ section.settings.featuredcollection }}</h2>
            {% if section.settings.link_url != blank %}
                <a class="category-link" href="{{ section.settings.link_url }}">{{ section.settings.link_text }} <i class="fa fa-arrow-right-long"></i> </a>
            {% endif %}
        </div>

            <div class="slides">
                {% for block in section.blocks %}
                    {% case block.type %}
                        {% when 'product_slide' %}

                            {% assign item = block.settings.product %}
                            {%
                                    render 'product-slider-item',
                                    main_loc: 'Homepage',
                                    item_loc: 'Category Product Slides',
                                    product: item
                            %}

                    {% endcase %}
                {% endfor %}
            </div>

        <div id="cat-slide-arrows-{{ section.id }}" class="round-arrows cat-slide-arrows"></div>
        <div class="slider-fade-r">aaaaaaaaaa</div>
    </div>
</section>
{% comment %}
{% javascript %}
jQuery(document).ready(function($){
    $('.category-slider-wrapper .slides').slick({
        arrows: true,
        autoplay: false,
        dots: false,
        infinite: false,
        //lazyLoad: 'ondemand',
        slidesToShow: 5,
        slidesToScroll: 1,
        prevArrow: '<button class="slide-arrow prev-arrow"><div class="visually-hidden">previous slide</div><i class="fa-regular fa-arrow-left"></i></button>',
        nextArrow: '<button class="slide-arrow next-arrow"><div class="visually-hidden">next slide</div><i class="fa-regular fa-arrow-right"></i></button>',
        variableWidth: true,
        responsive: [
            {
                breakpoint: 1240,
                settings: {
                    slidesToShow: 4,
                    slidesToScroll: 1,
                }
            },
            {
                breakpoint: 960,
                settings: {
                    slidesToShow: 3,
                    slidesToScroll: 1,
                }
            },
            {
                breakpoint: 640,
                settings: {
                    slidesToShow: 1,
                    slidesToScroll: 1,
                }
            }
        ]
    });
});
{% endjavascript %}
{% endcomment %}
{% schema %}
{
    "name": "category-product-slider",
    "class": "category-product-slider--section",
    "settings":[
        {
            "type": "text",
            "label": "Heading",
            "id" : "featuredcollection"
        },
        {
            "type": "url",
            "label":  "Link URL",
            "id": "link_url"
        },
        {
            "type": "text",
            "label":  "Link Text",
            "id": "link_text"
        }
    ],
    "blocks": [
        {
            "name": "Products",
            "type": "product_slide",
            "settings": [
                {
                    "type": "product",
                    "id": "product",
                    "label": "product"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "category-product-slider",
            "name": "Category Product Slider",
            "settings": {}
        }
    ]
}
{% endschema %}