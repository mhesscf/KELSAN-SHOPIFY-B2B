{% style %}
	.main-slider-wrapper{
		width: 100%;
		display: block;
		position: relative;
	}
	.main-slider-wrapper .main-slider{
		width: 100%;
	}
	.main-slider-wrapper .main-slider .slide{
		display: flex;
	}
	.main-slider-wrapper .main-slider .slide .l{
		width: 45%;
	}
	.main-slider-wrapper .main-slider .slide .l .inner{

	}
	.main-slider-wrapper .main-slider .slide .l .inner h1{
		font-size: 40px;
		font-weight: 700;
		color: {{ setting.colors_text }};
	}
	.main-slider-wrapper .main-slider .slide .l .inner p{
		color: {{ setting.colors_medium_text }};
		font-size: 20px;
		line-height: 1.3;
	}
	.main-slider-wrapper .main-slider .slide .l .inner .button{
		background-color: {{ settings.color_button_background }};
		font-size: 17px;
		font-weight: 500;
		color: {{ settings.color_button_text }};
	}
	.main-slider-wrapper .main-slider .slide .l .inner p span{
		font-weight: 700;
	}
	.main-slider-wrapper .main-slider .slide .r{
		width: 65%;
	}
	@media (max-width: 1200px){

	}
	@media (max-width: 991.98px){

	}
{% endstyle %}
<section class="main-slider-wrapper">
    <div class="main-slider">
        {% for block in section.blocks %}
            {% case block.type %}
                {% when 'poster_slides' %}
                    <div class="slide">
                        <div class="row">
                            <div class="l">
                                <div class="inner">
                                    <h1>{{ block.settings.slideheading }}</h1>
                                    <p>{{ block.settings.slidetext }}</p>
                                    <a class="button" href="{{ block.settings.slidelinkurl }}">{{ block.settings.slidelinktext }}</a>
                                </div>
                            </div>
                            <div class="r">
                                <div class="img-wrap">
                                    <div class="img" style="background-image: url('{{ block.settings.image | img_url: 'master' }}');"></div>
                                </div>
                            </div>
                        </div>
                    </div>
            {% endcase %}
        {% endfor %}
    </div>
    <div id="main-slide-arrows"></div>
</section>



{% schema %}
{
    "name": "main-slider",
    "class": "main-slider--section",
    "blocks": [
        {
            "type": "poster_slides",
            "name": "Slides",
            "settings": [
                {
                    "type": "text",
                    "id": "slideheading",
                    "label": "Slide Heading"
                },
                {
                    "type": "text",
                    "id": "slidetext",
                    "label": "Slide Text Under Heading"
                },
                {
                    "type": "text",
                    "id": "slidelinktext",
                    "label": "Button Text"
                },
                {
                    "type" : "url",
                    "id": "slidelinkurl",
                    "label": "Button Link URL"
                },
                {
                    "type": "image_picker",
                    "id": "slideimage",
                    "label": "Slide Image"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "main-slider-section",
            "name": "Main Slider"
        }
    ]
}
{% endschema %}