<script
		type="application/json"
		data-section-type="{{ section_type | strip }}"
		data-section-id="{{ section.id }}"
		data-section-data
>

</script>
<section class="top-product-showcase" data-section-id="{{ section.id }}">
	<div class="top-product-showcase__content container">
		<div class="showcase-row">
			<div class="showcase-slide-wrap">
				<div class="section-title-row">
					<h2 class="featured-slider-title">{{ section.settings.featuredcollection }}</h2>
					{% if section.settings.link_url != blank %}
						<a class="category-link" href="{{ section.settings.link_url }}">{{ section.settings.link_text }} <i class="fa fa-arrow-right-long"></i> </a>
					{% endif %}
				</div>
				<div class="product-showcase-slides">
					{% for block in section.blocks %}
						{% case block.type %}
							{% when 'product_slide' %}

								{% assign crawlcheck = false %}
								{% for c in block.settings.product.collections %}
									{% if c.handle == "discontinued" %}
										{% assign crawlcheck = true %}
									{% endif %}
								{% endfor %}
								{% if block.settings.product != "" %}
									{% if block.settings.product.title == nil %}
										{% assign crawlcheck = true %}
									{% endif %}
								{% endif %}
								{% if crawlcheck == true %}
									<div class="crawlcheck crawlcheck-slider"><!-- check product that is supposed to be here for discontinued or broken handle --></div>
								{% endif %}

								{% assign item = block.settings.product %}
								{%
										render 'product-slider-item',
										main_loc: 'Homepage',
										item_loc: 'Best Sellers Slider',
										product: item
								%}

						{% endcase %}
					{% endfor %}
				</div>
				<div id="top-slide-arrows" class="round-arrows cat-slide-arrows-{{ section.id }}"></div>
			</div>
			<div class="showcase-product">
				<h2 class="showcase-top-title">Top Rated <br>Product</h2>
				<div style="padding: 0;display: flex;margin: auto;">
					{% assign item = section.settings.featured_product %}
					{%
							render 'product-slider-item',
							main_loc: 'Homepage',
							item_loc: 'Top Rated',
							product: item
					%}
				</div>
			</div>
		</div>
	</div>
</section>

