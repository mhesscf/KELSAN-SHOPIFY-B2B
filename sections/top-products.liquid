{% style %}
	.top-product-showcase{
	overflow: hidden;
	margin-bottom: 50px;
	margin-top: 50px;
	}
	.top-product-showcase .container{
	width: 1400px;
	margin: auto;
	max-width: 90%;
	}
	.top-product-showcase .container .showcase-slide-wrap{
	width: calc(100% - 380px);
	overflow: hidden;
	background: rgb(234,236,240);
	background: linear-gradient(94deg, rgba(234,236,240,1) 0%, rgba(248,251,254,1) 100%);
	border-radius: 29px;
	position: relative;

	}
	.top-product-showcase .section-title-row{
	padding-left: 30px;
	}
	.top-product-showcase .featured-slider-title{
	text-align: left;
	margin-bottom: 15px;
	}
	.top-product-showcase .category-link{
	color: {{ settings.warning_text }};
	text-decoration: none;
	margin-bottom: 10px;
	display: block;
	}
	.top-product-showcase .slick-slider{
	padding-bottom: 50px;
	padding-left: 20px;
	}

	.top-product-showcase .product-showcase-slides .price-was{
	font-size: 13px;
	position: relative;
	top: -5px;
	color: {{ settings.color_button_secondary_background }};
	}
	.top-product-showcase .product-showcase-slides .price-was sup{
	top: -2px;
	}
	.top-product-showcase .product-showcase-slides .slick-list{
	overflow: visible;
	}
	.top-product-showcase .product-showcase-slides .slick-list .slick-track{
	padding: 20px 0 15px 30px;
	display: flex;
	}
	.top-product-showcase .product-showcase-slides .product-slide a{
	text-decoration: none;
	width: 230px;
	min-width: 230px;
	max-width: 250px;
	padding-bottom: 50px;
	position: relative;
	height: 100%;
	display: flex;
	flex-flow: column;
	}
	.top-product-showcase .product-showcase-slides .product-detail-sku{
	font-size: 13px;
	color: {{ settings.color_headings }};
	display: block;
	}
	.top-product-showcase .product-showcase-slides .product-slide{
	border-radius: 29px;
	padding: 20px;
	box-shadow: 0px 2px 10px 0px rgba(00,00,00,0.14);
	overflow: hidden;
	margin-right: 20px;
	height: inherit;
	transition: all 0.4s ease-in-out;
	background-color: #fff;
	}
	.top-product-showcase .product-showcase-slides .product-slide .rating .jdgm-widget{
	margin-bottom: 0;
	}
	.top-product-showcase .product-showcase-slides .product-slide .rating .jdgm-widget.jdgm-widget{
	display: block !important;
	}
	.top-product-showcase .product-showcase-slides .product-slide .rating .jdgm-widget .jdgm-prev-badge__text{
	color: {{ settings.color_text }};
	}
	.top-product-showcase .product-showcase-slides .product-slide .price-was{
	color: {{ settings.color_icons }};
	font-size: 13px;
	display: block;
	position: relative;
	top: -4px;
	}
	.top-product-showcase .product-showcase-slides .product-slide:hover{
	box-shadow: 0px 2px 25px 0px rgba(00,00,00,0.24);
	}
	.top-product-showcase .product-showcase-slides .product-slide .product__img{
	max-width: 100%;
	display: block;
	}
	.top-product-showcase .product-showcase-slides .product-slide .image-wrap{
	display: block;
	position: relative;
	}
	.top-product-showcase .product-showcase-slides .product-slide .image-wrap .poster{
	position: relative;
	display: block;
	padding-top: 100%;
	background-size: contain;
	background-position: center center;
	background-repeat: no-repeat;
	}
	.top-product-showcase .product-showcase-slides .product-slide .product__title{
	font-size: 18px;
	font-weight: 500;
	color: {{ settings.color_text }};
	text-decoration: none;
	margin-bottom: 5px;
	min-height: 50px;
	}

	.top-product-showcase .product-showcase-slides .product-slide .product__price{
	display: flex;
	align-content: center;
	margin-bottom: 10px;
	}
